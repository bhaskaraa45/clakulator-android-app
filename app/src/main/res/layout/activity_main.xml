<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout">

        <EditText
            android:id="@+id/equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/showAnswer"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:cursorVisible="true"
            android:editable="false"
            android:gravity="top|right"
            android:textIsSelectable="true"
            android:textSize="35sp"

            />

        <EditText
            android:id="@+id/showAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/answer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:editable="false"
            android:gravity="top|right"
            android:maxLines="2"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:editable="false"
            android:gravity="right|top"
            android:maxLines="2"
            android:textSize="50sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_clear"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="#EA0909"
                android:text="CE"
                android:textSize="20sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_open"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="#3EAC79"
                android:text="("
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_close"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="#3EAC79"
                android:text=")"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_div"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="/"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_mul"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="x"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="-"
                android:textSize="35sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="+"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="#EA0808"
                android:text="AC"
                android:textSize="20sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_point"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="#6730D1"
                android:text="."
                android:textSize="35sp"
                app:cornerRadius="38dp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/btn_"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="="
                android:textSize="30sp"
                app:cornerRadius="15dp"
                app:rippleColor="#454343" />

            <Space
                android:layout_width="20dp"
                android:layout_height="90dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>